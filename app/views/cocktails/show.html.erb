<h3><%= @cocktail.name %></h3>

<div class="row">
  <div class="col-xs-8">
    <h4>Doses pour faire le cocktail :</h4>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li>
        <p>
          <%= dose.description %> de <%= dose.ingredient.name %>
          <%= link_to 'Supprimer', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
        </p>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="col-xs-4">
  <h4>Ingrédients du cocktail :</h4>
  <ul>
    <% @cocktail.ingredients.each do |ingredient| %>
      <li><p><%= ingredient.name %></p></li>
    <% end %>
  </ul>
  </div>
</div>

<%#= link_to 'Ajoutez une dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-danger' %>
<%= render 'doses/form', dose: @dose %>

<%= link_to 'Retour à la liste', cocktails_path, class: 'btn btn-warning' %>
